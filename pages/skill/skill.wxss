.nav {
  height: 120rpx;
  width: 100%;
  background-color: #F9FAFC;
  display: flex;
  flex-direction:row;
  position: fixed;
  z-index: 1000;
}

.nav-item {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction:column;
  font-size: 25rpx;
  text-align: center;
}

.nav-item image {
  width: 64rpx;
  height: 64rpx;
  margin: 4rpx auto;
}

.skill_main {
  height: 2000rpx;
  padding-top: 120rpx;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.article-item {
  display: flex;
  flex-direction: row;
  border: 2rpx solid #E5E9F2;
  border-radius: 8rpx;
  width:98%;
  margin:10rpx auto;
  height: 200rpx;
}

.article-image,.article-image image{
  width:260rpx;
  height:200rpx;
  border-radius:8rpx;
}

.article-column {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.article-title {
  font-size: 25rpx;
  margin: 5rpx 5rpx;
}

.article-summary {
  font-size: 20rpx;
  color: #666666;
  margin: 6rpx 5rpx;
}